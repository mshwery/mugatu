<%= form_for @recipe do |f| %>
  <%= render 'partials/error_messages', :object => f.object %>
    
  <%= f.hidden_field :account_id, :value => current_user.account.id %>

  <fieldset>
    <%= f.label :name, "Name" %>
    <%= f.text_field :name %>
  </fieldset>
  <fieldset>
    <%= f.label :notes, "Notes" %>
    <%= f.text_field :notes %>
  </fieldset>

  <fieldset>
    <table>
      <caption>Ingredients</caption>
      <thead>
        <tr>
          <th>Ingredient</th>
          <th>Quantity</th>
          <th>Unit</th>
        </tr>
      </thead>
      <tbody>
        <%= f.fields_for :ingredients do |builder| %>
          <%= render 'ingredient_fields', :f => builder %>
        <% end %>
      </tbody>
    </table>
  </fieldset>
  <fieldset>
    <%= f.submit "Submit" %>
  </fieldset>
<% end %>