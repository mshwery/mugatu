<section id="recipes">
  
  <div class="header">
    <h1>Recipes: <%= link_to "New Recipe", new_recipe_path %> | <%= link_to "New Item", new_item_path %></h1>
  </div>

  <div class="overview">
    <ul>
      <% @recipes.each do |recipe| %>
        <li>
          <%= link_to recipe.name, recipe, :class => 'recipe' %> |
          <%= link_to "Edit", edit_recipe_path(recipe) %> |
          <%= link_to "Destroy", recipe, :confirm => 'Are you sure?', :method => :delete %>
        </li>
      <% end %>
    </ul>
  </div>

</section>