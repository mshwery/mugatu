<%= form_for @account do |f| %>
  <%= render 'partials/error_messages', :object => f.object %>

  <fieldset>
    <%= f.label :name, "Company" %>
    <%= f.text_field :name %>
  </fieldset>

  <%= f.fields_for :users do |user| %>
    
    <%= user.hidden_field :admin, :value => true %>
    <fieldset>
      <%= user.label :name %>
      <%= user.text_field :name %>
    </fieldset>
    <fieldset>
      <%= user.label :email %>
      <%= user.text_field :email %>
    </fieldset>
    <fieldset>
      <%= user.label :password %>
      <%= user.password_field :password %>
    </fieldset>
    <fieldset>
      <%= user.label :password_confirmation, "Confirmation" %>
      <%= user.password_field :password_confirmation %>
    </fieldset>
  <% end %>

  <fieldset>
    <%= f.submit "Submit" %>
  </fieldset>
<% end %>