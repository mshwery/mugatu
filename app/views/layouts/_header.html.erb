<header class="wrap">
  <%= link_to logo, root_path %>
  <nav>
    <ul>
      <% if current_user %>
        <li><%= link_to current_user.account.name.capitalize, root_url(:subdomain => current_user.account.name) %>: <%= current_user.email %></li>
      <% end %>
      <li><%= link_to "Home", root_path %></li>
      <% if current_user %>
        <li><%= link_to "Log out", logout_path %></li>
      <% else %>
        <li><%= link_to "Sign up", signup_path %></li>
        <li><%= link_to "Log in", login_path %></li>
      <% end %>
    </ul>
  </nav>
</header>