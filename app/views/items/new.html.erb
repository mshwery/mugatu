<h1>New Item</h1>

<% form_for @item do |f| %>
  <%= render 'partials/error_messages', :object => f.object %>

  <div class="field">
    <%= f.label :name, "Name" %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>
  <div>
    <%= f.submit "Submit" %>
  </div>
<% end %>